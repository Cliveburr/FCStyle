{
  "name": "fcstyle",
  "version": "1.0.0",
  "description": "Framework CSS em React para ser utilizado por outros projetos React",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "start": "rollup -c -w",
    "build": "rollup -c",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "css",
    "framework",
    "scss",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cliveburr/FCStyle.git"
  },
  "bugs": {
    "url": "https://github.com/Cliveburr/FCStyle/issues"
  },
  "homepage": "https://github.com/Cliveburr/FCStyle#readme",
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "rollup": "^4.47.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.90.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
